@model NotesApp.Models.ViewModels.NoteVM

<form method="post" asp-action="Update" class="container">
    <input asp-for="Note.Id" hidden />

    <h2 class="text-black-50 pl-3 text-center">Add New Notes</h2>

    <div class="row">
        <div class="col-12">

            <div class="form-group row">
                <div class="col-12">
                    <label asp-for="Note.Title"></label>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-12">
                    <input asp-for="Note.Title" class="form-control" />
                    <span asp-validation-for="Note.Title" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Note.Creator"></label>
                </div>
                <div class="col-6">
                    <label asp-for="Note.NoteType"></label>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <input asp-for="Note.Creator" class="form-control" />
                    <span asp-validation-for="Note.Creator" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <select asp-for="Note.NoteTypeId" asp-items="@Model.TypeDropDown" class="form-control">
                    </select>
                    <span asp-validation-for="Note.NoteTypeId" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <label asp-for="Note.Content">Content</label>
                <textarea class="form-control" asp-for="Note.Content" rows="10"></textarea>
            </div>

            <div class="form-group row">
                <div class="col-8 offset-2 row">
                    <div class="col">
                        <input type="submit" class="btn btn-info w-75" value="update" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                    </div>
                </div>
            </div>








        </div>
    </div>


</form>